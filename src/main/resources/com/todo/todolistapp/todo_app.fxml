<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.todo.todolistapp.TodoController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="To-Do List"/>

    <TextField fx:id="taskInput" promptText="Enter a task"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="addButton" text="Add"/>
        <Button fx:id="editButton" text="Edit"/>
        <Button fx:id="removeButton" text="Remove"/>
    </HBox>

    <ListView fx:id="taskList" prefHeight="200"/>
</VBox>
